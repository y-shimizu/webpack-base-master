{
  "name": "webpack-base",
  "version": "0.1.0",
  "author": "fzac",
  "description": "template with webpack",
  "license": "MIT",
  "main": "dist/bundle.js",
  "scripts": {
    "start": "NODE_ENV=${NODE_ENV-development} webpack-dev-server --debug --devtool source-map --output-pathinfo",
    "build": "NODE_ENV=${NODE_ENV-production} webpack --optimize-minimize",
    "clean": "rm -rf ./dist/**",
    "rebuild": "npm run clean && npm run build",
    "lint": "npm run lint:js",
    "lint:js": "eslint ."
  },
  "dependencies": {
    "jquery": "^3.2.1",
    "sanitize.css": "^5.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-eslint": "^6.1.2",
    "babel-core": "^6.0.0",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-class-properties": "^6.11.5",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.13.2",
    "babel-register": "^6.11.6",
    "browser-sync": "^2.23.1",
    "css-loader": "^0.28.4",
    "css-mqpacker": "^6.0.1",
    "csswring": "^6.0.0",
    "ejs": "^2.5.7",
    "ejs-html-loader": "^4.0.1",
    "eslint": "^3.3.1",
    "extract-loader": "^3.1.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^3.0.1",
    "glob": "^7.1.2",
    "html-srcsets-loader": "^0.5.1",
    "lodash": "^4.17.11",
    "postcss": "^6.0.8",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^10.0.0",
    "postcss-loader": "^3.0.0",
    "postcss-nesting": "^2.3.1",
    "style-loader": "^0.18.2",
    "url-loader": "^0.5.9",
    "webpack": "^4.0.0",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.1.11"
  }
}
